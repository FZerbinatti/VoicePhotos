<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip"
                android:color="#000001" />
            <gradient android:angle="-90"
                android:startColor="@color/grey_opaque"
                android:endColor="@color/grey_opaque"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip"
                android:color="@color/grey_opaque" />
            <solid android:color="@color/grey_opaque"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0.5dip"
                android:color="#000000" />
            <gradient android:angle="-90"
                android:startColor="#00E9E9E9"
                android:endColor="#00E9E9E9" />
        </shape>
    </item>
</selector>