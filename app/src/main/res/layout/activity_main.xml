<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">





        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnCapture" />

        <ProgressBar
            android:id="@+id/progress_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />




        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opaque_background"
                android:layout_marginBottom="10dp"
                >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_trasp_background">

                <ImageButton
                    android:id="@+id/button_multiple_shot_end_session"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="gone"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_check"
                    android:text="@string/dummy_button" />

                <ImageButton
                    android:id="@+id/btnCapture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:visibility="visible"
                    android:background="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_camera_icon"
                    android:text="@string/dummy_button" />

            </LinearLayout>
        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_opaque_background"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/button_trasp_background">

                    <ImageButton
                        android:id="@+id/btnCaptureMultiple"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_multi_shot_icon"
                        android:text="@string/dummy_button" />

                </LinearLayout>



            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?metaButtonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_opaque_background"
            android:backgroundTint="@color/opaque_white"
            android:orientation="vertical"
            tools:ignore="UselessParent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_trasp_background">

                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_settings_black"
                    android:scaleType="centerCrop"
                    android:text="@string/dummy_button" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullscreen_content_controls3"
            style="?metaButtonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_opaque_background"
            android:backgroundTint="@color/opaque_white"
            android:layout_gravity="bottom|start"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_trasp_background">

                <ImageButton
                    android:id="@+id/gallery"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_gallery"
                    android:scaleType="centerCrop"
                    android:background="@color/transparent"
                    android:text="@string/dummy_button" />

            </LinearLayout>



        </LinearLayout>
    </FrameLayout>


</RelativeLayout>

